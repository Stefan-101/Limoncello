@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container-fluid">

    <div class="logo-animation mb-4 d-flex justify-content-center" data-aos="fade-in">
        <video id="logoVideo" autoplay muted playsinline style="height: 500px; width: auto; display: block;">
            <source src="~/videos/logo-animation.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br />

    <div class="row align-items-center justify-content-center mt-5" style="min-height: 80vh; background:linear-gradient(to right, #f5ff00, #baffc9)" data-aos="fade-in">
        <div class="col-lg-6 text-center p-5">
            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">More Than Just An Average Drink</h1>
            <p class="lead text-white animate__animated animate__fadeInUp">Bring fun to your productivity. Manage tasks effortlessly with our playful, simple interface.</p>
            <br />
            <a class="btn btn-lg text-white px-5 py-3" href="/Identity/Account/Login" style="transition: transform 0.3s;">
                Get Started
            </a>
        </div>
    </div>
   
    <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br />

    <div class="row my-5" data-aos="fade-in">
        <div class="col text-center">
            <h2>Why Choose Limoncello?</h2>
            <p class="text-muted">Enjoy powerful features while managing your tasks with a fun twist.</p>
        </div>
    </div>
    <div class="row text-center" data-aos="fade-up" data-aos-delay="100">
        <div class="col-md-4 mb-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h4>Easy Task Management</h4>
            <p>Keep track of your tasks with a simple drag-and-drop system.</p>
        </div>
        <div class="col-md-4 mb-5">
            <i class="fas fa-users fa-3x text-primary mb-3"></i>
            <h4>Collaborate with Teams</h4>
            <p>Share tasks and projects with your team, all in one place.</p>
        </div>
        <div class="col-md-4 mb-5">
            <i class="fas fa-bell fa-3x text-warning mb-3"></i>
            <h4>Stay Notified</h4>
            <p>Set reminders and receive notifications to stay on top of deadlines.</p>
        </div>
    </div>

    <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br />

    <div class="row my-5 p-5 text-center" data-aos="fade-in">
        <div class="col">
            <h3 class="mb-4">Trusted by Industry Leaders</h3>
            <p class="text-muted">Our platform is trusted by some of the best companies in the industry.</p>
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="200">
                    <img src="~/images/google.png" alt="Company 1 Logo" class="img-fluid">
                </div>
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="300">
                    <img src="/images/meta.png" alt="Company 2 Logo" class="img-fluid">
                </div>
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="400">
                    <img src="~/images/jackdaniels.png" alt="Company 3 Logo" class="img-fluid">
                </div>
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="500">
                    <img src="/images/spotify.png" alt="Company 4 Logo" class="img-fluid">
                </div>
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="600">
                    <img src="~/images/uipath.png" alt="Company 5 Logo" class="img-fluid">
                </div>
                <div class="col-md-2 mb-4" data-aos="fade-in" data-aos-delay="600">
                    <img src="~/images/fendi.png" alt="Company 6 Logo" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br />

    <div class="row my-5 p-5 text-center" style="background: white; border-radius: 10px;" data-aos="fade-up">
        <div class="col">
            <h3 class="mb-4 text-white">Ready to Make Work Fun?</h3>
            <a href="/Identity/Account/Register" class="btn btn-lg text-white px-5 py-3" style="font-size: 1.2em; transition: transform 0.3s;">
                Sign Up Now
            </a>
        </div>
    </div>

</div>

<br />

<footer class="footer bg-light mt-auto py-3">
    <div class="container text-center">
        <span class="text-muted">&copy; 2025 Limoncello All Rights Reserved.</span>
    </div>
</footer>


<script>
    const video = document.getElementById('logoVideo');
    video.onended = function () {
        video.pause();
        video.currentTime = video.duration; 
    };
</script>


